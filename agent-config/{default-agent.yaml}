    verbosity: "moderate"        # concise, moderate, verbose
    empathy_level: 0.5          # 0.0 to 1.0
    
  # Collaboration preferences
  collaboration:
    style: "cooperative"        # cooperative, competitive, independent
    memory_sharing: true
    coordination_willingness: 0.8

performance_settings:
  # Task handling
  task_management:
